<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="0.5"
    android:background="@color/colorWhite"
    app:layout_scrollFlags="scroll">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/f1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Category :  "
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />


                    <Spinner
                        android:id="@+id/input_productcategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.Spinner" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type :  "
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />


                    <Spinner
                        android:id="@+id/input_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.Spinner" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SubproductType :  "
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />


                    <Spinner
                        android:id="@+id/input_subproducttype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.Spinner" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size (in Crs) : "
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/input_size"
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberSigned|numberDecimal|numberPassword" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income (in Lacs) : "
                            android:layout_margin="5dp"
                            android:textColor="#000000"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/input_income"
                            android:layout_width="197dp"
                            android:layout_height="wrap_content"
                            android:inputType="number|numberDecimal" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assign To :"
                            android:layout_margin="5dp"
                            android:textColor="#000000"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/input_assign"
                            android:layout_width="225dp"
                            android:layout_height="52dp"
                            android:inputType="textEmailAddress" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due By   :"
                            android:layout_margin="5dp"
                            android:textColor="#000000"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/input_dom"
                            android:layout_width="match_parent"
                            android:drawableRight="@mipmap/schedule"
                            android:clickable="false"
                            android:focusable="false"
                           android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actionable Item :"
                            android:layout_margin="5dp"
                            android:textColor="#000000"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/input_actionalitem"
                            android:layout_width="197dp"
                            android:layout_height="52dp"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:weightSum="1"
                        android:layout_weight="1">


                        <Button
                            android:text="Submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button2"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:weightSum="1">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:weightSum="1">


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
